mixin printNode(obj)
  if obj && obj.type === 'file'
    li
      a.featurebook-spec-tree-file(href=obj.path + '.html')= obj.displayName
  else if obj && obj.type === 'directory'
    li
      a.featurebook-spec-tree-directory(href=obj.path)= obj.displayName
      ul
        each child in obj.children
          +printNode(child)

aside.featurebook-spec-tree
  ul
    each child in specTree.children
      +printNode(child)
